<div class="wrap wpe-admin">
    <h1>WPEasy Plugins</h1>
    <img src="{{ wpeExtUrl }}img/trans-wpeasy@2x.png"/>
    <h2>Active WPEasy Plugins</h2>
    <div class="wpe-plugins-table">
        <table class="table table-striped table-bordered ">
            <thead class="thead-dark">
            <tr>
                <th>Plugin Name</th>
                <th>Description</th>
            </tr>
            </thead>
            <tbody>
            {% for name, detail in plugins %}
                <tr>
                    <td>{{ name }}</td>
                    <td>{{ detail.description }}</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
    <hr/>
    <div class="container-fluid">
        <div class="row wpe-white-section">
            <div class="col-sm-4">
                <img src="{{ wpeExtUrl }}img/inv-its-like-roadside.png" class="img-fluid" />
            </div>
            <div class="col-sm-8">
                <h2>WordPress Management and Support Packages.</h2>
                <ul>
                    <li>Help & Support</li>
                    <li>Monitoring & Reporting</li>
                    <li>Backup & Security</li>
                </ul>
                <a href="https://store.wpeasy.net" class="btn btn-lg btn-primary">See our plans</a>
            </div>
        </div>
    </div>
</div>